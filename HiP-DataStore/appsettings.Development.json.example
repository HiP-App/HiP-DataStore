{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "None"
    }
  },
  "Endpoints": {
    "MongoDbHost": "mongodb://localhost:27017",
    "MongoDbName": "main",
    "ThumbnailUrlPattern": "https://docker-hip.cs.upb.de/develop/thumbnailservice/api/Thumbnails?Url=datastore/api/Media/{0}/File",

    "EventStoreHost": "tcp://localhost:1113",

    // To connect to an Event Store cluster use this instead:
    // "EventStoreHost": "discover://username:password@myserver:1113",

    "EventStoreStream": "main-stream"
  }
}
